<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michan.ProfilActivity"
    tools:showIn="@layout/activity_profil">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ffffff"
        android:src="@mipmap/tachibana" />

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">
            <TextView
                android:gravity="center|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nama  :"
                android:textColor="#000000"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <TextView
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ramdhani Michandari"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">
            <TextView
                android:gravity="center|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Kelas  :"
                android:textColor="#000000"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <TextView
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5A"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">
            <TextView
                android:gravity="center|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nim    :"
                android:textColor="#000000"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <TextView
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="14090021"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">
            <TextView
                android:gravity="center|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Prodi  :"
                android:textColor="#000000"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
            <TextView
                android:gravity="left|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="D4 Teknik Informatika"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
